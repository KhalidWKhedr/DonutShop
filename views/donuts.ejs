<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Donuts</title>
    <style>
        * {
            box-sizing: border-box;
        }

        body {
            margin: 0;
            font-family: Arial, sans-serif;
            background-color: #f0f0f0; /* Light background color */
        }

        .header {
            text-align: center;
            padding: 32px;
            background-color: #4CAF50; /* Header background color */
            color: white; /* Header text color */
            margin-bottom: 20px;
        }

        .container {
            max-width: 1200px; /* Maximum width of content */
            margin: 0 auto; /* Center align content */
            padding: 0 20px; /* Padding around content */
        }

        .row {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(250px, 1fr)); /* Responsive grid layout */
            gap: 20px; /* Adjust the gap between tiles */
        }

        .tile {
            background-color: #ffffff; /* Tile background color */
            border: 1px solid #e0e0e0; /* Tile border color */
            padding: 20px;
            text-align: center;
            display: flex;
            flex-direction: column;
            justify-content: space-between;
            height: 100%; /* Full height for each tile */
            transition: box-shadow 0.3s ease; /* Smooth transition for box-shadow */
        }

        .tile:hover {
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1); /* Box shadow on hover */
        }

        .tile img {
            width: 100%;
            height: 180px; /* Fixed height for image */
            object-fit: cover; /* Maintain aspect ratio */
            margin-bottom: 10px;
        }

        .tile .label {
            font-weight: bold;
            margin-bottom: 5px;
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
        }

        .tile button {
            width: 100%;
            padding: 10px;
            background-color: #4CAF50;
            color: white;
            border: none;
            cursor: pointer;
            transition: background-color 0.3s ease; /* Smooth transition for background-color */
        }

        .tile button:hover {
            background-color: #45a049; /* Darker background color on hover */
        }

        @media screen and (max-width: 768px) {
            .row {
                grid-template-columns: repeat(2, 1fr); /* 2 columns on smaller screens */
            }
        }

        @media screen and (max-width: 480px) {
            .row {
                grid-template-columns: repeat(1, 1fr); /* 1 column on mobile screens */
            }
        }
    </style>
</head>
<body>

<!-- Header -->
<div class="header">
    <h1>All Donuts</h1>
</div>

<!-- Main Content -->
<div class="container">
    <div class="row">
        <% donuts.forEach(donut => { %>
            <div class="tile">
                <img src="<%= donut.DONUT_IMAGE_PATH %>" alt="<%= donut.DONUT_FLAVOR %> Image">
                <div class="label"><%= donut.DONUT_FLAVOR %></div>
                <button>Add to Cart</button>
            </div>
        <% }); %>
    </div>
</div>

</body>
</html>
